<div
  x-show="activeIndex == 'search'"
  x-trap.noscroll="activeIndex == 'search'"
  x-cloak
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="opacity-0 z-50"
  x-transition:enter-end="opacity-100"
  x-transition:leave="transition ease-in duration-300"
  x-transition:leave-start="opacity-100"
  x-transition:leave-end="opacity-0"
  :class="{
    'top-16!': fixedNav,
  }"
  class="
    absolute z-50 left-0 w-full max-h-[calc(100dvh-4rem)] py-14 bg-white fluid-grid
    {% if post.navigation_color != 'transparent' %}
      top-[calc(4rem+var(--wp-admin--admin-bar--height,0px))]
    {% else %}
      top-16
    {% endif %}
  "
  style="box-shadow: 0px 20px 20px rgba(0, 0, 0, 0.25);"
>
  <div class="span-content">
    <form
      action="/"
      class="relative"
    >
      <label class="block">
        <div class="sr-only">Search AdeptAg</div>
        <input
          type="search"
          name="s"
          placeholder="Search AdeptAg"
          class="text-h4 w-full border-0 outline-0 pl-14 text-blue-dark"
        >
      </label>
      <div class="absolute top-0 left-2 h-full aspect-[0.5] flex flex-col justify-center text-blue-dark">
        {% include "svgs/search.twig" %}
      </div>
    </form>
  </div>
</div>
