  x-show="activeIndex == {{ loop.index }}"
  x-trap.noscroll="activeIndex == {{ loop.index }}"
  x-cloak
  x-transition:enter="transition ease-out duration-300"
  x-transition:enter-start="opacity-0 z-50"
  x-transition:enter-end="opacity-100"
