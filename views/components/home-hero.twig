<section class="relative h-220 max-h-[calc(100dvh-var(--wp-admin--admin-bar--height,0px))]">
  {{ ResponsiveImage(background_image, {
    class: 'absolute top-0 left-0 size-full object-cover',
    sizes: '100vw',
  }) }}
  {% if post.navigation_color == 'transparent' %}
    <div class="absolute top-0 left-0 size-full z-10 bg-linear-to-b from-0% to-20% from-black to-black/0 opacity-60"></div>
  {% endif %}
  <div class="hidden lg:block absolute top-0 left-0 size-full z-10 bg-linear-to-r from-45% to-100% from-black to-black/0 opacity-60"></div>
  <div class="lg:hidden absolute top-0 left-0 size-full z-10 bg-linear-to-t from-55% to-100% from-black to-black/0 opacity-50"></div>
  <div class="fluid-grid absolute z-40 w-full left-0 bottom-0 pb-25 gap-y-10 lg:content-center lg:pb-0 lg:h-full">
    <div class="span-content text-white lg:col-start-[content-start] lg:col-end-[col-7]">
      <h1 class="text-h1">{{ heading|stars_span('underline decoration-green-light decoration-[3%] underline-offset-12') }}</h1>
    </div>
    {% if body %}
      <div class="span-content text-white lg:col-start-[content-start] lg:col-end-[col-6]">
        <p class="text-b2">{{ body }}</p>
      </div>
    {% endif %}
    <div class="span-content text-white lg:col-start-[content-start] lg:col-end-[col-7]">
      {% for item in links %}
        {% if item.link %}
          <div class="">
            {% include "partials/link.twig" with {
              ...item.link,
              class: 'button-white',
            } %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
