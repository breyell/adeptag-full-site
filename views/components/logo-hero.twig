<section class="relative h-150 lg:h-175 max-h-[calc(100dvh-var(--wp-admin--admin-bar--height,0px))] bg-black">
  {{ ResponsiveImage(background_image, {
    class: 'absolute top-0 left-0 size-full object-cover',
    sizes: '100vw',
    fetchpriority: 'high',
  }) }}
  <div class="absolute top-0 left-0 size-full z-10 bg-black opacity-60"></div>
  <div class="fluid-grid relative z-20 size-full">
    <div class="span-content flex flex-col justify-center items-center">
      {% if logo %}
        <div class="h-16 mb-7">
          {{ ResponsiveImage(logo, {
            class: 'size-full object-contain',
            sizes: '100vw',
            fetchpriority: 'high',
          }) }}
        </div>
      {% endif %}
      <h1 class="text-h1 text-white text-center">{{ heading|stars_span('underline decoration-green-light decoration-[3%] underline-offset-12') }}</h1>
    </div>
  </div>
</section>
