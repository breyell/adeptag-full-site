{% extends 'layouts/default.twig' %}

{% block main %}
	{% include "components/product-hero.twig" with {
    heading: post.title,
    ...post.hero,
  } %}
  {% include "components/product-specifications.twig" with {
    ...post.specifications,
  } %}
  {% for component in post.meta('product_page_builder') %}
		{% include "components/" ~ component.acf_fc_layout | replace({'_': '-'}) ~ ".twig" with component %}
	{% endfor %}
  {% include "components/cta.twig" with {
    data_source: post.cta_data_source,
    cta: {
      heading: post.cta.cta_heading,
      body: post.cta.cta_body,
      links: post.cta.cta_links,
      image: post.cta.cta_image,
    },
  } %}
{% endblock %}
